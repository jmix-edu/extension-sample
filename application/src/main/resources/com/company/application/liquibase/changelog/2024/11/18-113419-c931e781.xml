<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="application">
        <addColumn tableName="ICS_STORAGE">
            <column name="ACTIVE" type="BOOLEAN"/>
            <column name="WORK_FROM" type="TIME"/>
            <column name="WORK_TO" type="TIME"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="application">
        <addColumn tableName="ICS_STORAGE">
            <column name="dtype" type="VARCHAR(255)"/>
        </addColumn>

        <update tableName="ICS_STORAGE">
            <column name="DTYPE" value="ics_Storage"/>
            <where>DTYPE is null</where>
        </update>
    </changeSet>
</databaseChangeLog>